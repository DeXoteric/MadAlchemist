<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/layout_prestige"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ui_frame_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_prestige"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_prestige" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_prestige"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="10sp"
                tools:text="Highest level boss killed" />

            <TextView
                android:id="@+id/text_prestige_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                tools:text="1 000 000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_currency"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/layout_prestige"
        android:background="@drawable/ui_frame_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_gold"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_gold" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorText"
                android:textSize="10sp"
                tools:text="Gold" />

            <TextView
                android:id="@+id/text_gold_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                tools:text="123.456E+999" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_exp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_exp" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorText"
                android:textSize="10sp"
                tools:text="Exp" />

            <TextView
                android:id="@+id/text_exp_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                tools:text="10000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_gems"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_gem" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_gems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorText"
                android:textSize="10sp"
                tools:text="Gems" />

            <TextView
                android:id="@+id/text_gems_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                tools:text="100" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_rebirth"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="3dp"
        android:layout_toStartOf="@id/btn_options"
        android:background="@drawable/ui_frame_background"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_rebirth" />

    <ImageButton
        android:id="@+id/btn_options"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ui_frame_background"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_options" />

    <LinearLayout
        android:id="@+id/layout_statistics"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/layout_prestige"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ui_frame_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_hero_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            tools:text="Statistics" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_inventory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layout_prestige"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/layout_statistics"
        android:background="@drawable/ui_frame_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            tools:text="Inventory" />

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:columnCount="3"
            app:rowCount="4">

            <LinearLayout
                android:id="@+id/layout_amulet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="0"
                app:layout_row="0">

                <TextView
                    android:id="@+id/text_amulet_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_amulet"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_amulet" />

                <TextView
                    android:id="@+id/text_amulet_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_helmet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="1"
                app:layout_row="0">

                <TextView
                    android:id="@+id/text_helmet_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_helmet"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_helmet" />

                <TextView
                    android:id="@+id/text_helmet_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cloak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="2"
                app:layout_row="0">

                <TextView
                    android:id="@+id/text_cloak_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_cloak"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_cloak" />

                <TextView
                    android:id="@+id/text_cloak_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_weapon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="0"
                app:layout_row="1">

                <TextView
                    android:id="@+id/text_weapon_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_weapon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_weapon" />

                <TextView
                    android:id="@+id/text_weapon_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_chestplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="1"
                app:layout_row="1">

                <TextView
                    android:id="@+id/text_chestplate_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_chestplate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_chestplate" />

                <TextView
                    android:id="@+id/text_chestplate_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_shield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="2"
                app:layout_row="1">

                <TextView
                    android:id="@+id/text_shield_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_shield"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_shield" />

                <TextView
                    android:id="@+id/text_shield_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_gloves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="0"
                app:layout_row="2">

                <TextView
                    android:id="@+id/text_gloves_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_gloves"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_gloves" />

                <TextView
                    android:id="@+id/text_gloves_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_leggings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="1"
                app:layout_row="2">

                <TextView
                    android:id="@+id/text_leggings_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_leggings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_leggings" />

                <TextView
                    android:id="@+id/text_leggings_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_belt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="2"
                app:layout_row="2">

                <TextView
                    android:id="@+id/text_belt_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_belt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_belt" />

                <TextView
                    android:id="@+id/text_belt_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="0"
                app:layout_row="3">

                <TextView
                    android:id="@+id/text_ring_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_ring"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_ring" />

                <TextView
                    android:id="@+id/text_ring_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_boots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_frame"
                android:orientation="vertical"
                app:layout_column="1"
                app:layout_row="3">

                <TextView
                    android:id="@+id/text_boots_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/icon_boots"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/icon_boots" />

                <TextView
                    android:id="@+id/text_boots_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="100" />
            </LinearLayout>


        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_slaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/layout_inventory"
        android:background="@drawable/ui_frame_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_monster_slaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            tools:text="Monster Slaying" />

        <ProgressBar
            android:id="@+id/progress_monster_slaying"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:foreground="@drawable/ui_frame"
            android:max="100"
            android:paddingBottom="3dp"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:paddingTop="3dp"
            android:progress="70"
            android:progressDrawable="@drawable/progress_bar_slaying" />

        <TextView
            android:id="@+id/text_gold_looted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            tools:text="10000 gold looted!" />

        <Button
            android:id="@+id/btn_slay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ui_frame"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            tools:text="Click to SLAY!" />
    </LinearLayout>


</RelativeLayout>